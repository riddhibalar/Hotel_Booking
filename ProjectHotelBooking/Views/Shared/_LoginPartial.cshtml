@if (Session["UserId"] != null)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right nav-link"}))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
            @Html.ActionLink("Hello " + Session["Email"] + "!", "Manage", "Account", routeValues: null, htmlAttributes: new {@class="nav-link",id=Session["UserId"] })
            </li>
            <li class="nav-item"><a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">Logoff</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">@Html.ActionLink("SignUp", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" ,@class="nav-link",style="font-family:Arial;"})</li>
        <li class="nav-item">@Html.ActionLink("SignIn", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" ,@class="nav-link",style="font-family:Arial;"})</li>
    </ul>
}
