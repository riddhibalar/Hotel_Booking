@model IEnumerable<ProjectHotelBooking.Models.Rooms>
@{
    MyDbContext db = new MyDbContext();
    ViewBag.Title = "Index";
}
@if (Convert.ToString(TempData["Data"]) == "Fail")
{
    <script>
        alert("No Rooms Available");
    </script>
}
@if (Convert.ToString(TempData["Data"]) == "Success")
{
    <script>
        alert("Book Successfully");
    </script>
}
<style>
    .abc:hover {
        font-size: 25px;
