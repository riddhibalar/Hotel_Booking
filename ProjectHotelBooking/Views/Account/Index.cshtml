</style>

<section class="home-slider owl-carousel" style="height:600px;">
    <div class="slider-item" style="background-image:url(/images/bg_1.jpg); height:600px;">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-12 ftco-animate text-center">
                    <div class="text mb-5 pb-3">
                        <h1 class="mb-3">Welcome To RedBird Palace</h1>
                        <h2>Hotels &amp; Resorts</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="slider-item" style="background-image:url(images/bg_2.jpg); height:600px;">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-12 ftco-animate text-center">
                    <div class="text mb-5 pb-3">
                        <h1 class="mb-3">Enjoy A Luxury Experience</h1>
                        <h2>Join With Us</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <h2 class="mb-4">Our Rooms</h2>
            </div>
        </div>
        <div class="row">
            @if (Model != null)
            {
                foreach (var item in Model)
                {

                    <div class="col-sm col-md-6 col-lg-4 ftco-animate">
                        <div class="room">
                            @{
                                var temp = item.RoomsId;
                                var fid = db.Files.First(f => f.RoomsId == temp).FileId;
                            }

                            <!--<a href="rooms.html" class="img d-flex justify-content-center align-items-center" style="background-image: ~/Files?id=@db.Files.First(f => f.RoomsId == temp).FileId;">
                                <div class="icon d-flex justify-content-center align-items-center">
                                    <span class="icon-search2"></span>
                                </div>
                            </a>-->
                            <img src="~/Files?id=@db.Files.First(f => f.RoomsId == temp).FileId" class="img d-flex justify-content-center align-items-center" style="width:350px;height:250px;">
                            <div class="text p-3 text-center">
                                <h3 class="mb-3">
                                    @Html.DisplayFor(modelItem => item.Type)
                                </h3>
                                <p><span class="price mr-2"> ₹@Html.DisplayFor(modelItem => item.Price).00</span> <span class="per">per night</span></p>
                                <hr>@Html.ActionLink("Book Now ", "Reservation", "Account", new { @class = "abc" })<span class="icon-long-arrow-right"></span>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

